  <button
    class="
      absolute 
      hidden 
      group-hover:inline-block group-[.opened]:max-w-full group-[.opened]:block group-[.opened]:rounded-t-none
      appearance-none 
      bottom-0 
      h-5 
      rounded-t-md 
      font-medium 
      text-[10px] 
      max-w-36 
      mx-auto 
      left-0 
      right-0 
      uppercase 
      bg-gray-200
      md:group-hover:hidden
    " 
    data-more
    data-text-opened="Méně detailů"
    data-text-closed="více detailů"
    type="button"
  >
    <span 
      class="align-[-2px] cursor-pointer"
      data-more-text
